		<property name="gtfsRealtimeProvider" ref="gtfsProvider" />
	</bean>
	<bean id="gtfsProvider"
		class="org.onebusaway.gtfs_realtime.exporter.GtfsRealtimeProviderImpl" />
	<bean id="tripUpdatesServlet"
		class="org.onebusaway.gtfs_realtime.exporter.TripUpdatesServlet">
		<property name="provider" ref="gtfsProvider" />
	</bean>
	<bean id="vehiclePostitionsServlet"
		class="org.onebusaway.gtfs_realtime.exporter.VehiclePositionsServlet">
		<property name="provider" ref="gtfsProvider" />
	</bean>
	<bean id="feedService"
		class="org.onebusaway.realtime.soundtransit.services.FeedServiceImpl" />

