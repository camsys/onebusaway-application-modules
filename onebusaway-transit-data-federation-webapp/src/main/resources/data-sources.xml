<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <bean id="dataSource"
          class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName"
                  value="java:comp/env/jdbc/appDB"/>
        <property name="lookupOnStartup"
                  value="true"/>
        <property name="cache"
                  value="true"/>
        <property name="proxyInterface"
                  value="javax.sql.DataSource"/>
        <property name="resourceRef"
                  value="true" />
    </bean>

    <bean class="org.onebusaway.container.spring.SystemPropertyOverrideConfigurer">
        <property name="order" value="-2" />
        <property name="properties">
            <props>
                <prop key="bundlePath">/var/lib/obanyc/no-such-dir</prop>
            </props>
        </property>
    </bean>
    <bean class="org.onebusaway.container.spring.PropertyOverrideConfigurer">
    <property name="properties">
        <props>
            <prop key="blockLocationServiceImpl.persistBlockLocationRecords">false</prop>
            <prop key="blockLocationServiceImpl.locationInterpolation">false</prop>
            <prop key="blockStatusServiceImpl.runningLateWindow">3600</prop>
            <prop key="routeBeanServiceImpl.doNotSortRouteIdList">1_H6,1_REX</prop>
            <prop key="configurationServiceClient.externalConfigurationApiUrl">http://localhost:9999/api/config/list</prop>
            <prop key="configurationServiceClient.connectionTimeout">5000</prop>
            <prop key="configurationServiceClient.readTimeout">5000</prop>
            <prop key="configurationServiceClient.configFile">/opt/wmata/oba/config.json</prop>
        </props>
    </property>
    </bean>

    <bean id="wmata_avl" class="org.onebusaway.transit_data_federation.impl.realtime.gtfs_realtime.GtfsRealtimeSource">
        <!-- NOTE POINTING TO PROD TEMPORARILY -->
        <property name="tripUpdatesUrl" value="http://gtfsrt.prod.wmata.obaweb.org:8080/api/v1/key/4b248c1b/agency/1/command/gtfs-rt/tripUpdates" />
        <property name="vehiclePositionsUrl" value="http://gtfsrt.prod.wmata.obaweb.org:8080/api/v1/key/4b248c1b/agency/1/command/gtfs-rt/vehiclePositions" />
        <property name="refreshInterval" value="10" />
        <property name="agencyIds">
            <list>
                <value>1</value>
            </list>
        </property>
        <property name="showNegativeScheduledArrivals" value="false"/>
    </bean>

    <bean id="httpServiceClient" class="org.onebusaway.transit_data_federation.util.HttpServiceClientImpl" >
        <constructor-arg type="java.lang.String" value="admin.prod.wmata.obaweb.org"/>
        <constructor-arg type="java.lang.Integer" value="8080" />
        <constructor-arg type="java.lang.String" value="/api/" />
    </bean>

    <bean id="bundleManagementService" class="org.onebusaway.transit_data_federation.impl.bundle.BundleManagementServiceImpl">
      <property name="bundleStoreRoot" value="/var/lib/oba/tds/bundle" />
        <property name="standaloneMode" value="false" />
    </bean>

</beans>